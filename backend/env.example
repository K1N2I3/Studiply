# Database
MONGODB_URI=mongodb://localhost:27017/studyhub

# JWT Secret (generate a strong secret key)
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration - Resend (Recommended - Fast & Reliable)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Resend Email Addresses (Must be verified domains in Resend)
RESEND_FROM_EMAIL=noreply@studiply.it              # Default/Registration verification emails
RESEND_CHANGE_EMAIL=change-email@studiply.it        # Email change verification
RESEND_CALENDAR_EMAIL=calendar@studiply.it          # Calendar reminders
RESEND_NOTIFICATION_EMAIL=notification@studiply.it # All notifications (streak reminders, etc.)

# Option 2: SMTP (Fallback - Slower)
# Only needed if not using Resend
EMAIL_USER=noreply@studiply.it
EMAIL_PASSWORD=your-smtp-password
SMTP_HOST=smtp0001.neo.space
SMTP_PORT=465

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_VERIFY_SERVICE_SID=your-twilio-verify-service-sid

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_MODE=live
# For test mode, use keys starting with sk_test_ and pk_test_
# Set STRIPE_MODE=test for development

# Server Port
PORT=3003

# Frontend URL (for redirects)
FRONTEND_URL=http://localhost:5173

# Firebase Admin (for migrations)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@example.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY\n-----END PRIVATE KEY-----\n"

# Migration helpers
DELETE_SOURCE_AFTER_MIGRATION=false

# AI Quest Generation Configuration
# Priority: Claude > OpenAI GPT-4o > OpenAI GPT-4o-mini > DeepSeek
# Claude (Anthropic) - Strongest model, recommended: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514
# Available models:
# - claude-sonnet-4-20250514 (latest, recommended)
# - claude-3-7-sonnet-20250219 (alternative)
# - claude-3-5-haiku-20241022 (faster, cheaper)
# OpenAI: Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
# For stronger OpenAI model, set: OPENAI_MODEL=gpt-4o
# DeepSeek: Get your API key from: https://platform.deepseek.com/api_keys (cheapest option)
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_MODEL=deepseek-chat
